datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      Role     @default(USER)
  createdAt DateTime @default(now())
}

model Guest {
  id        String     @id @default(uuid())
  name     String
  email      String     @unique
  contact   String      @unique
  guestCount Int?
  message    String?
  checkIn    Boolean   @default(false)
  createdAt DateTime   @default(now())
}

enum Role {
  USER
  ADMIN
}
